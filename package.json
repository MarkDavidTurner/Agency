{
    "name": "agency",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "application/*",
        "packages/*"
    ],
    "scripts": {
        "build": "lerna exec --parallel -- babel --root-mode upward src -d core --ignore **/*.stories.js",
        "clean:build": "lerna exec -- rimraf core",
        "bootstrap": "lerna bootstrap --use-workspaces",
        "start": "lerna exec --scope application-spa -- npm start",
        "storybook": "start-storybook -p 5555",
        "prepare": "yarn clean:build && yarn build"
    },
    "devDependencies": {
        "@babel/cli": "^7.10.5",
        "@babel/core": "^7.11.4",
        "@babel/plugin-proposal-class-properties": "^7.10.4",
        "@babel/plugin-proposal-object-rest-spread": "^7.11.0",
        "@babel/plugin-syntax-jsx": "^7.10.4",
        "@babel/plugin-transform-runtime": "^7.11.0",
        "@babel/preset-env": "^7.11.0",
        "@babel/preset-react": "^7.10.4",
        "@storybook/react": "^6.0.20",
        "babel-core": "7.0.0-bridge.0",
        "babel-loader": "^8.1.0",
        "babel-plugin-styled-components": "^1.11.1",
        "lerna": "^3.22.1",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "styled-components": "^5.1.1",
        "webpack": "^4.44.1"
    }
}
